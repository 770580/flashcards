<header class="container">
  <nav class="navbar navbar-default">
	  <div class="container-fluid">
	    <div class="navbar-header">
          <%= link_to "Флэшкарточкер", root_path, class:"navbar-brand" %>
        </div>
        <ul class="nav navbar-nav">
	    <% if current_user %>
	      <li class="active"><%= link_to "Все карточки", cards_path %></li>
	      <li><%= link_to "Добавить карточку", new_card_path %></li>
	      </ul>
	      <ul class="nav navbar-nav navbar-right">
	        <li id="fat-menu" class="dropdown">
	          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                   <%= current_user.email %>
                   <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
	            <li><%= link_to "Редактировать аккаунт", edit_user_path(current_user.id) %></li>
	            <li class="divider"></li>
	            <li><%= link_to "Выход", :logout, method: :post %></li>
	          </ul>
	        </li>
	      </ul>
	    <% else %>
	      </ul>
	      <ul class="nav navbar-nav navbar-right">
	        <li><%= link_to "Регистрация", new_user_path %></li>
	        <li><%= link_to "Войти", :login %></li>
	      </ul>
	    <% end %>
	  </div>
  </nav>
  <% flash.each do |key, message| %>
    <%= content_tag(:div, message, class: "alert alert-#{key}") %>
  <% end %>
</header>