<div class="container">
  <div class="jumbotron">
	<%= simple_form_for(@card, html: { class: '.form-inline' }) do |f| %>
	  <%= f.input :original_text, label: 'Оригинальное слово' %>
	  <%= f.input :translated_text, label: 'Перевод' %>
	  <%= f.hidden_field :review_date, value: Date.today.next_day(3) %>
	  <%= f.button :submit, "Создать" %>
	<% end %>
  </div>
</div>